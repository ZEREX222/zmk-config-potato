#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                            &kp ESC     &kp TILDE   &kp KP_N2                                   &kp SQT     &kp LBKT    &bt BT_CLR_ALL
                &kp Q       &kp W       &kp E       &kp R       &kp T               &kp Y       &kp U       &kp I       &kp O       &kp P
                &kp A       &kp S       &kp D       &kp F       &kp G               &kp H       &kp J       &kp K       &kp L       &kp SEMI
                &kp Z       &kp X       &kp C       &kp V       &kp B               &kp N       &kp M       &kp COMMA   &kp DOT     &kp FSLH
                                                    &mo 1       &kp RET             &kp SPACE   &kp BSPC
            >;
        };

        bt_layer {
            bindings = <
                                &bootloader     &bootloader     &bootloader                                             &bootloader     &bootloader     &bootloader  
                &none           &none           &bt BT_CLR      &none           &none                   &none           &none           &none           &none           &none
                &bt BT_SEL 0    &bt BT_SEL 1    &bt BT_SEL 2    &none           &none                   &none           &none           &none           &none           &none
                &none           &none           &none           &none           &none                   &none           &none           &none           &none           &none
                                                                &none           &none                   &none           &none
            >;
        };
    };
};